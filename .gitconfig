# Git global configurations
# Location: $HOME/.gitconfig

[user]
  name = Zilong Liang
  email = zlliang96@outlook.com
  signingKey = ~/.ssh/id_ed25519.pub

[gpg]
  format = ssh

[commit]
  gpgSign = true

[init]
  defaultBranch = main

[core]
  editor = code --wait # VS Code
  excludesfile = ~/.gitignore

[credential]
  helper = osxkeychain

[fetch]
  prune = true

[pull]
  rebase = true

[push]
  autoSetupRemote = true

[alias]
  st = status
  ci = commit
  co = checkout
  br = branch
  unstage = reset HEAD --
  last = log -1 HEAD
  lg = log --color --graph --decorate --all --oneline

[includeIf "gitdir:~/Workspace/booking/"]
  path = ~/Workspace/booking/.gitconfig
