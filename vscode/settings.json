// VS Code settings
// Location: ~/Library/Application Support/Code/User/settings.json

{
  // Editor
  "editor.fontFamily": "IBM Plex Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.renderLineHighlight": "all",
  "editor.minimap.enabled": false,
  "editor.scrollBeyondLastLine": false,
  "editor.tabSize": 2,
  "editor.wordWrap": "off",
  "editor.rulers": [80],

  // Workbench and Window
  "explorer.sortOrder": "modified",
  "workbench.settings.editor": "json",
  "workbench.settings.useSplitJSON": true,
  "workbench.colorTheme": "Night Owl",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.activeIconPack": "react",
  "window.restoreFullscreen": false,

  // Integrated Terminal
  "terminal.integrated.shell.osx": "fish",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontFamily": "IBM Plex Mono",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.lineHeight": 1.2,

  // Files
  "files.autoSave": "onFocusChange",
  "files.autoGuessEncoding": false,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": false,
  "files.exclude": {
    "**/.git": true, "**/.svn": true, "**/.hg": true,
    "**/CVS": true, "**/.DS_Store": true,
    // custom
    "**/.localized": true, "**/.settings": true, "**/.classpath": true,
    "**/.project": true, "**/.factorypath": true, "**/.gradle": true,
    "**/__pycache__/": true, "**/*.pyc": true, "**/.next": true,
    "**/.pytest_cache": true, "**/node_modules": true
  },

  // Git and GitHub
  "git.confirmSync": false,
  "git.autofetch": false,

  // Spell Checker
  "cSpell.allowCompoundWords": true,
  
  // Markdown
  "[markdown]": { "editor.wordWrap": "on", "editor.tabSize": 4 },
  "markdown.preview.fontSize": 16,
  
  // C / C++ / Fortran
  "[fortran_fixed-form]": {
    "editor.rulers": [5, 6, 72],
    "editor.renderIndentGuides": false
  },
  "[c]": { "editor.formatOnSave": true, },
  "[cpp]": { "editor.formatOnSave": true, },
  "C_Cpp.configurationWarnings": "Disabled",
  "C_Cpp.default.cppStandard": "c++17",
  "C_Cpp.clang_format_fallbackStyle": "Google",
  "cmake.configureOnOpen": true,

  // Rust
  "[rust]": { "editor.tabSize": 4, "editor.formatOnSave": true },
  
  // Python
  "[python]": { "editor.tabSize": 4, "editor.formatOnSave": true },
  "python.formatting.provider": "black",
  
  // HTML, CSS and JavaScript
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "eslint.enable": true,
  "eslint.packageManager": "yarn",
  "eslint.validate": [
    "javascript", "javascriptreact",
    "typescript", "typescriptreact"
  ],
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,

  // LaTeX
  "[latex]": { "editor.wordWrap": "on", "editor.autoIndent": true },
  "latex-workshop.message.update.show": false,
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.view.autoFocus.enabled": false,
  "latex-workshop.hover.preview.cursor.enabled": false,
  "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.latex.autoBuild.run": "never",
  "latex-workshop.latex.clean.fileTypes": [
    "*.aux", "*.bbl", "*.blg", "*.idx", "*.ind", "*.lof",
    "*.lot", "*.out", "*.toc", "*.acn", "*.acr", "*.alg", 
    "*.glg", "*.glo", "*.gls", "*.ist", "*.fls", "*.log",
    "*.fdb_latexmk", "*.thm", "*.synctex.gz", "*.nav",
    "*.synctex(busy)", "*.snm", "*.xdv", "_minted-document"
  ],
  "latex-workshop.latex.recipes": [
    { "name": "Build LaTeX (pdfLaTeX)", "tools": ["pdflatex"] },
    { "name": "Build LaTeX (XeLaTeX)", "tools": ["xelatex"] }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "pdflatex",
      "command": "latexmk",
      "args": [
        "-shell-escape", "-interaction=nonstopmode",
        "-file-line-error", "-pdf", "%DOC%"
      ]
    },
    {
      "name": "xelatex",
      "command": "latexmk",
      "args": [
        "-shell-escape", "-interaction=nonstopmode",
        "-file-line-error", "-xelatex", "%DOC%"
      ]
    },
  ]
}
