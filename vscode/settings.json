{
  // Editor
  "editor.fontFamily": "IBM Plex Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.renderLineHighlight": "none",
  "editor.minimap.enabled": false,
  "editor.scrollBeyondLastLine": false,
  "editor.tabSize": 2,
  "editor.wordWrap": "off",
  "editor.rulers": [80],
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  // Workbench and Window
  "workbench.statusBar.feedback.visible": false,
  "workbench.settings.editor": "json",
  "workbench.settings.useSplitJSON": true,
  "workbench.colorTheme": "Min Dark",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.activeIconPack": "react",
  "window.restoreFullscreen": false,

  // Integrated Terminal
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontFamily": "IBM Plex Mono",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.lineHeight": 1.2,

  // Files
  "files.autoSave": "onFocusChange",
  "files.encoding": "utf8",
  "files.autoGuessEncoding": false,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": false,
  "files.exclude": {
    "**/.git": true, "**/.svn": true, "**/.hg": true,
    "**/CVS": true, "**/.DS_Store": true,
    // custom
    "**/.localized": true, "**/.settings/": true, "**/.classpath": true,
    "**/.project": true, "**/.gradle/": true, "bin/": true,
    "**/__pycache__/": true, "**/*.pyc": true, "**/.next/": true,
    "**/.pytest_cache": true, "**/node_modules/": true
  },

  // Git and GitHub
  "git.confirmSync": false,
  "git.autofetch": false,

  // Spell Checker
  "cSpell.allowCompoundWords": true,
  
  // Markdown
  "[markdown]": { "editor.wordWrap": "on" },
  "markdown.preview.fontFamily": "Lora",
  "markdown.preview.fontSize": 16,
  
  // C / C++ / Fortran
  "[fortran_fixed-form]": {
    "editor.rulers": [5, 6, 72],
    "editor.renderIndentGuides": false
  },
  "C_Cpp.autoAddFileAssociations": false,
  "C_Cpp.clang_format_fallbackStyle": "Google",
  "C_Cpp.configurationWarnings": "Disabled",
  "C_Cpp.default.cppStandard": "c++11",
  "C_Cpp.default.includePath": [
    "/usr/local/include",
    "/usr/local/include/eigen3",
    "/usr/local/include/node",
    "node_modules/nan",
    "~/Applications/MATLAB.app/extern/include",
    "/opt/intel/mkl/include/",
    "/opt/arrayfire/include/"
  ],

  // Rust
  "[rust]": { "editor.tabSize": 4 },

  // MATLAB
  "matlab.lintOnSave": false,
  "matlab.mlintpath": "~/Applications/MATLAB.app/bin/maci64/mlint",

  // Python
  "[python]": { "editor.tabSize": 4 },
  "python.pythonPath": "python3",
  "python.testing.pyTestEnabled": false,
  "python.linting.enabled": false,
  "python.jediEnabled": false,  // Use Microsoft IntelliCode instead of Jedi
  

  // HTML, CSS and JavaScript
  "eslint.enable": true,
  "eslint.packageManager": "yarn",
  "emmet.includeLanguages": { "javascript": "javascriptreact" },
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,
  "[javascript]": { "editor.formatOnSave": true },
  "[typescript]": { "editor.formatOnSave": true },

  // LaTeX
  "[latex]": { "editor.wordWrap": "on", "editor.autoIndent": true },
  "latex-workshop.message.update.show": false,
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.view.autoFocus.enabled": false,
  "latex-workshop.hover.preview.cursor.enabled": false,
  "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.latex.autoBuild.run": "never",
  "latex-workshop.latex.clean.fileTypes": [
    "*.aux", "*.bbl", "*.blg", "*.idx", "*.ind", "*.lof",
    "*.lot", "*.out", "*.toc", "*.acn", "*.acr", "*.alg", 
    "*.glg", "*.glo", "*.gls", "*.ist", "*.fls", "*.log",
    "*.fdb_latexmk", "*.thm", "*.synctex.gz", "*.nav",
    "*.synctex(busy)", "*.snm", "_minted-document"
  ],
  "latex-workshop.latex.recipes": [
    { "name": "Build LaTeX (pdfLaTeX)", "tools": ["pdflatex"] },
    { "name": "Build LaTeX (XeLaTeX)", "tools": ["xelatex"] }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "pdflatex",
      "command": "latexmk",
      "args": [
        "-shell-escape", "-synctex=1", "-interaction=nonstopmode",
        "-file-line-error", "-pdf", "%DOC%"
      ]
    },
    {
      "name": "xelatex",
      "command": "latexmk",
      "args": [
        "-shell-escape", "-synctex=1", "-interaction=nonstopmode",
        "-file-line-error", "-xelatex", "%DOC%"
      ]
    },
  ],
}
